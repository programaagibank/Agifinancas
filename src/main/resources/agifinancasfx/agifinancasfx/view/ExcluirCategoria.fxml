<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="640.0" prefWidth="320.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agifinancasfx.agifinancasfx.control.CategoriaController.ExcluirCategoriaController">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <!-- ConteÃºdo principal -->
    <VBox fx:id="containerPrincipal" alignment="CENTER" prefHeight="575.0" prefWidth="320.0" spacing="20" styleClass="cartao-detalhes-container" VBox.vgrow="ALWAYS">

        <Label styleClass="titulo-categoria" text="Excluir Categoria">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <ComboBox fx:id="cbCategorias" prefHeight="32.0" prefWidth="274.0" promptText="Selecione" />

<!--        <TextField fx:id="limiteCategoria" promptText="Limite da categoria" styleClass="text-field">-->
<!--            <VBox.margin>-->
<!--                <Insets bottom="20.0" />-->
<!--            </VBox.margin>-->
<!--        </TextField>-->

        <Button fx:id="btnExcluir" mnemonicParsing="false" onAction="#excluirCategoria" styleClass="button-excluir" text="Excluir">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
    </VBox>

    <!-- Toolbar inferior -->
    <ToolBar prefHeight="65.0" prefWidth="320.0" styleClass="custom-toolbar">
        <items>
            <Button fx:id="btnVoltar" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" styleClass="toolbar-button">
                <graphic>
                    <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/agifinancasfx/agifinancasfx/img/home.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnRelatorio" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" styleClass="toolbar-button">
                <graphic>
                    <ImageView fitHeight="33.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/agifinancasfx/agifinancasfx/img/file.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" styleClass="toolbar-button">
                <graphic>
                    <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/agifinancasfx/agifinancasfx/img/add.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnCartao" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" styleClass="toolbar-button">
                <graphic>
                    <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/agifinancasfx/agifinancasfx/img/card.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" styleClass="toolbar-button">
                <graphic>
                    <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/agifinancasfx/agifinancasfx/img/exit.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </items>
    </ToolBar>
</VBox>
